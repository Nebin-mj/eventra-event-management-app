<h2>Oncomming Events</h2>
<div class="d-flex flex-wrap justify-content-around w-100">
   {{#if oncommingEvents}}
      {{#each oncommingEvents}}
         <div class="col m-4 position-relative" style="min-width: 40%;">
            {{#if @root.isAuthenticated}}
               <a class="bg-primary d-flex justify-content-center align-items-center"
                  style="height: 2rem; width: 2rem; border-radius: 50%;position: absolute; top:-0.5rem; right: -0.5rem; z-index: 10; color: white;"
                  href="/event/edit/{{this._id}}">{{>edit}}
               </a>
            {{/if}}
            <div class="card shadow">
               <img
                  src="{{this.bannerImage}}"
                  class="card-img-top"
                  style="height: 15rem; object-fit: cover;"
                  alt="..."
               />
               <div class="card-body">
                  <h5 class="card-title">{{this.name}}</h5>
                  <p class="card-text">{{{formatBody this.description}}}</p>
                  <a class="btn btn-primary" href="/event/{{this._id}}">Know
                     More</a>
               </div>
            </div>
         </div>
      {{/each}}
   {{else}}
      <span class="lead">No events yet.</span>
   {{/if}}
</div>
<br /><br />
